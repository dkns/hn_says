{
  "manifest_version": 2,
  "name": "What HN Says",
  "version": "0.1",
  "description": "Shows related HN threads and comments on GitHub projects",
  "author": "Daniel Kosi≈Ñski",

  "background": {
    "scripts": [
      "src/index.js"
    ],
    "permissions": ["https://github.com/", "activeTab"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["src/contentScript.js"],
      "css": ["css/style.css"]
    }
  ]

}
