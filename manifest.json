{
  "manifest_version": 2,
  "name": "What HN Says",
  "version": "0.1",
  "description": "Shows related HN threads and comments on GitHub projects",
  "author": "Daniel Kosi≈Ñski",

  "page_action": {
    "default_popup": "src/hn_says.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },

  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["build/extension.js"],
      "css": ["css/style.css"]
    }
  ]
}
